{
  "apps": [
    {
      "name": "sms-boom",
      "script": "index.js",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production"
      },
      "watch_options": {
        "followSymlinks": false
      },
      "ignore_watch": ["node_modules"],
      "autorestart": true,
      "max_memory_restart": "300M"
    }
  ]
}
